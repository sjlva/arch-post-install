build-essentials:
	bash ./scripts/essentials.sh

build-alacritty:
	bash ./scripts/alacritty.sh

build-tmux:
	bash ./scripts/tmux.sh

build-python:
	bash ./scripts/python.sh

build-r:
	bash ./scripts/R.sh

build-ranger:
	bash ./scripts/ranger.sh

build-rofi:
	bash ./scripts/rofi.sh

build-neovim:
	bash ./scripts/neovim.sh

build-dotfiles:
	bash ./scripts/dotfiles.sh

install-neovim-plugins:
	bash ./scripts/neovim-install-plugins.sh

install-all: build-essentials \
	build-alacritty \
	build-tmux \
	build-python \
	build-r \
	build-ranger \
	build-rofi \
	build-neovim \
	build-dotfiles \
	install-neovim-plugins

